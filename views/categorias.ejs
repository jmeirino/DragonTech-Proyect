<!DOCTYPE html>
<html lang="en">

   <!--Head-->
   <%- include ("./partials/head")  %> 

   <body>

   <!--Header-->    
   <%- include ("./partials/header")  %>

   
    <main>
        <!--Nav de categorias-->
        <%- include("./partials/nav-categorias")  %>
        
        <section class="productList">

            <h2>Lista de productos</h2>

            <% categoria.forEach(element => { %>
             
                <article class="productList__product">
                    
                    <a href="/productos/productDetail/<%= element.id %> ">
                        <img src="/img/imgProducts/<%= element.img  %>" alt="">
                    </a>

                    <a href="/productos/productDetail/<%= element.id %> ">
                        <h3><%= element.marca  %> </h3>
                        <p><%= element.modelo  %></p>
                    </a>

                    <p><%= element.precio  %> </p>

                    <div>
                        <button class="buttom-carrito" type="submit">AGREGAR AL CARRITO</button>
                        <button class="buttom-carrito" type="submit">COMPRAR</button>   
                    </div>
                
                </article>

            <% }) %>
            
         
        </section>

    </main>
    
    <!--Footer-->
    <%- include ("./partials/footer")  %> 
    
</body>
</html>