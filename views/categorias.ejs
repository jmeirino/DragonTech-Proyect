<!DOCTYPE html>
<html lang="en">

   <!--Head-->
   <%- include ("./partials/head")  %> 

   <body>

   <!--Header-->    
   <%- include ("./partials/header")  %>

   
    <main>
        <!--Nav de categorias-->
        <section class="categorias">
    
            <h2>Categorias</h2>
        
            <ul>
                <li><a href="/productos/productList ">Todos</a></li>
                <% categorias.forEach(element => { %>
                    <li><a href="/productos/categorias/<%= element.id %> "><%= element.nombre %></a></li>
                <% }) %>
            </ul>
        
        </section>
        
        <section class="productList">

            <h2>Lista de productos</h2>

            <% productos.forEach(element => { %>
             
                <article class="productList__product">
                    
                    <a href="/productos/productDetail/<%= element.id %> ">
                        <img src="/img/imgProducts/<%= element.img  %>" alt="">
                    </a>

                    <a href="/productos/productDetail/<%= element.id %> ">
                        <h3><%= element.marca  %> </h3>
                        <p><%= element.modelo  %></p>
                    </a>

                    <p>$ <%= element.precio.toLocaleString()  %> </p>

                    <div>
                        <button class="buttom-carrito" type="submit">AGREGAR AL CARRITO</button>
                        <button class="buttom-carrito" type="submit">COMPRAR</button>   
                    </div>
                
                </article>

            <% }) %>
            
         
        </section>

    </main>
    
    <!--Footer-->
    <%- include ("./partials/footer")  %> 
    
</body>
</html>