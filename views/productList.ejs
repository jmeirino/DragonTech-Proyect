<!DOCTYPE html>
<html lang="en">

    <!--head-->
    <%- include ("./partials/head")  %> 

<body>

    <!--header-->
    <%- include ("./partials/header")  %>

    <main>
        <!--Nav de categorias-->
        <%- include ("./partials/nav-categorias")  %>
        
        <section class="productList">

            <h2>Lista de productos</h2>

            <% productos.forEach(element => { %>
             
                <article class="productList__product">
                    
                    <a href="/productos/productDetail/<%= element.id %> ">
                        <img src="/img/imgProducts/<%= element.img  %>" alt="">
                    </a> 
                    <a href="/productos/productDetail/<%= element.id %> ">
                        <p><b> <%= element.marca  %> </b></p>
                        <p> <%= element.modelo  %></p>
                    </a>
                   
                    <p>$ <%= element.precio.toLocaleString()  %> </p>

                    <div class="buttonsBuy-productos">
                        <button class="button-carrito" type="submit">AGREGAR AL CARRITO</button>
                        <button class="button-carrito" type="submit">COMPRAR</button>   
                    </div>
                
                </article>

            <% }) %>
            
         
        </section>
    </main>

    <!--footer-->
    <%- include ("./partials/footer")  %>

</body>
</html>